@model EasyCooking.Models.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Category.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.ImageUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.VideoUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.VideoUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Creator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Creator)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.PrepTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.PrepTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.CookTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.CookTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.ServingAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.ServingAmount)
        </dd>
        <div>
            <div class="div2">
                <div>
                    <h2>Ingredients</h2>
                    <a asp-controller="Ingredient" asp-action="Create" asp-route-id="@Model.Recipe.Id"><input type="button" value="Add Ingredient"/></a>
                </div>
                <table class="table">
                    <tbody>
                        @foreach (var item in Model.ingredients)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Content)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", "Ingredient", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", "Ingredient", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="div3">
                <div>
                    <h2>Directions</h2>
                    <a asp-controller="Step" asp-action="Create" asp-route-id="@Model.Recipe.Id"><input type="button" value="Add a Step" /></a>
                </div>
                <div class="table">
                    <ol>
                        @foreach (var item in Model.steps)
                        {
                            <li>
                                <p>
                                    @Html.DisplayFor(modelItem => item.Content)
                                    @Html.ActionLink("Edit", "Edit", "Step", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", "Step", new { id = item.Id })
                                </p>
                            </li>
                        }
                    </ol>
                </div>
            </div>
        </div>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Recipe.Id" class="btn btn-outline-primary mx-1" title="Edit">
        <i class="fas fa-pencil-alt"></i>
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Recipe.Id" class="btn btn-outline-primary mx-1" title="Delete">
        <i class="fas fa-trash"></i>
    </a>
    <a asp-action="Index">Back to List</a>
</div>
