@model IEnumerable<EasyCooking.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between">
    <h1>Explore New Recipies!</h1>
    <div>
        <h2>Filter By Category</h2>
        @using (Html.BeginForm("Index", "Recipe", FormMethod.Get))
        {
    <div class="d-flex flex-row">
        @Html.TextBox("searching")<input placeholder="Search..." type="submit" value="Search" />
        <a class="nav-link text-dark" asp-area="" asp-controller="Recipe" asp-action="Index">Reset</a>
    </div>
        }
    </div>
    @if (User.IsInRole("Admin"))
    {
        <div>
            <a asp-action="Create">Add New Recipe</a>
        </div>
    } else
    {
        <div></div>
    }
    </div>
<div class="container">
    <div class="d-flex row justify-content-around">
        @if (Model.Count() == 0)
        {
                <tr>
                    <td colspan="3">
                        No Matches Found
                    </td>
                </tr>
        }
        else
        {
        @foreach (var item in Model)
        {
        <div class="col-auto col-xs-12 mt-5">
            @{var actionUrl = $"Favorites/Create/{item.Id}";}
            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-body">
                <div class="card" style="width: 18rem;">
                    <div class="col-md-auto col-xs-12">
                        <img class="card-img-top text-center" src="@item.ImageUrl" alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">By: @item.Creator</p>

                    </div>

                </div>
            </a>
            </div>
                }
                }
        </div>
    </div>
       